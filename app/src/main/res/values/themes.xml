<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Myreminder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="customText.customTextRecyclerView" >

        <item name="android:padding">12dp</item>
        <item name="android:textColor">#DCDCDC</item>


    </style>
    <style name="customText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="edtCustomText" parent="Widget.AppCompat.Button">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="customText.customTextRecyclerView.date">
        <item name="android:textColor">#D0ABAB</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">23sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>

    </style>



</resources>