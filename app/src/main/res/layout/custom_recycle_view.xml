<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/odd_drawable"

    android:orientation="vertical">



        <TextView

            android:id="@+id/taskNameTXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="name"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_red_light"
            android:textSize="25sp"

            android:theme="@style/customText.customTextRecyclerView" />

        <TextView

            android:id="@+id/taskDescriptionTXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="jfklasj;fkldjas;klfjd;klasjdfklj;sklajdfkljaskljdfkjasdklfjskldafjsdaklfjskldfj;klafjsdaklfjsdklfjskldfjs;klafjsdklfjsdlfjsdafjsljfs;kdafjskla;"

            android:theme="@style/customText.customTextRecyclerView" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/taskEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="taskEndDate\n2020-05-07"
                android:theme="@style/customText.customTextRecyclerView.date" />

            <TextView
                android:id="@+id/taskEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:text="taskEndTime\n12:15"
                android:theme="@style/customText.customTextRecyclerView.date" />
        </LinearLayout>


        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Delete"

            android:theme="@style/edtCustomText" />

</LinearLayout>